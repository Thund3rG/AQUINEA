{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/public/assets/$1" },
    { "source": "/manifest.json", "destination": "/public/manifest.json" },
    { "source": "/_next/(.*)", "destination": "/_next/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/(?!public/assets/|_next/|api/|static/|public/manifest.json)(.*)", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/public/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/public/manifest.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=86400" },
        { "key": "Content-Type", "value": "application/json" }
      ]
    }
  ]
}
